{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
    <h1>Voiture Details</h1>

    <p><strong>ID:</strong> {{ voiture.id }}</p>
    <p><strong>Nom:</strong> {{ voiture.nom }}</p>
    <p><strong>Date de Fabrication:</strong> {{ voiture.fabrication ? voiture.fabrication|date('Y-m-d') : 'N/A' }}</p>
    <p><strong>Prix:</strong> {{ voiture.prix }}</p>
    <p><strong>Usine:</strong> {{ voiture.usine ? voiture.usine.nom : 'N/A' }}</p>

    <a href="{{ path('voiture_edit', {'id': voiture.id}) }}" class="btn btn-primary">Edit</a>
    <form method="post" action="{{ path('voiture_delete', {'id': voiture.id}) }}" onsubmit="return confirm('Are you sure you want to delete this voiture?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
    <a href="{{ path('voiture_index') }}" class="btn btn-secondary">Back to list</a>
{% endblock %}
